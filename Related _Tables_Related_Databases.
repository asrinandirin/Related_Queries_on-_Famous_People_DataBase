/* All of the names are chosen by randomly */
/* Main purpose is understanding the basics of Related Tables and Related Databases. */ 

CREATE TABLE Movie_stars (id INTEGER PRIMARY KEY AUTOINCREMENT,
fullname TEXT,
age INTEGER );

CREATE TABLE Movies (id INTEGER PRIMARY KEY AUTOINCREMENT,
name TEXT,
person_id INTEGER );

