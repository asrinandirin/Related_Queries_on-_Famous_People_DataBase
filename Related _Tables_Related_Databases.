CREATE TABLE couples(
id INTEGER PRIMARY KEY AUTOINCREMENT,
person1_id INTEGER,
person2_id INTEGER);

INSERT INTO couples(person1_id, person2_id) 
VALUES (1,3);
INSERT INTO couples(person1_id , person2_id)
VALUES (2,4);
INSERT INTO couples(person1_id , person2_id)
VALUES (5,6);

SELECT a.fullname,b.fullname 
FROM couples 
JOIN Movie_stars a
ON a.id = couples.person1_id
JOIN Movie_stars b
ON b.id = couples.person2_id;



/* Using Join */

SELECT Movie_stars.fullname,Movies.name 
FROM Movie_stars 
JOIN Movies
ON Movie_stars.id = Movies.person_id ;
